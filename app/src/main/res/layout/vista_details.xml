<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mediumroundedborderbackground"
    android:orientation="vertical"
    android:minWidth="320dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtVistaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barracuda Piers"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/imageView"
        android:background="#808080"
        android:layout_marginBottom="5dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtVistaPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limsa Lominsa Upper Decks (9, 7)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTimeFrame"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="00:00 - 04:00"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:id="@+id/lstWeathers"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:src="@drawable/weather_clear" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/weather_fair" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Emote : /lookout"
                android:id="@+id/txtEmote"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/imgVistaScreenshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/img_vista_screenshot"
                android:background="@drawable/thinimageborder" />

            <TextView
                android:id="@+id/txtVistaHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sur la terrasse du Bismark, il y a deux moellons en brique dans le mur. Celui devant la porte est le point de vue."
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </ScrollView>



    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/btnClose" />

</LinearLayout>