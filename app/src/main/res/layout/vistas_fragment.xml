<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/imgFilterARR"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="3dp"
            android:clickable="true"
            android:src="@drawable/gathering_filter_arr_on" />

        <ImageView
            android:id="@+id/imgFilterHW"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="3dp"
            android:clickable="true"
            android:src="@drawable/gathering_filter_hw_on" />

        <ImageView
            android:id="@+id/imgFilterTime"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="3dp"
            android:clickable="true"
            android:src="@drawable/filter_time_off" />

        <Space
            android:layout_width="20px"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imgSortNumber"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="3dp"
            android:clickable="false"
            android:src="@drawable/sort_number_on" />

        <ImageView
            android:id="@+id/imgSortTime"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="3dp"
            android:clickable="true"
            android:src="@drawable/sort_time_off" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10000"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txtEorzeaTime"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:text="00:00"
            android:textAlignment="gravity"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <ListView
        android:id="@+id/lstVistas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>