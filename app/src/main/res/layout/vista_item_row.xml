<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:focusableInTouchMode="false"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgEmote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:src="@drawable/emote_lookout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="10000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtVistaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Là où il faut être"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/txtMapAndPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Azyz la (20,30)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTimeFrame"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="00:00 - 04:00"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:id="@+id/lstWeathers"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/weather_clear" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/weather_fair" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgViewScreenshot"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:clickable="true"
        android:src="@drawable/img_view_screenshot" />
</LinearLayout>