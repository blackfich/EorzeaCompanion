<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFilterBotanist"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:src="@drawable/gathering_filter_botanist_on" />

        <ImageView
            android:id="@+id/imgFilterMiner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:src="@drawable/gathering_filter_miner_on" />

        <ImageView
            android:id="@+id/imgFilterFisher"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:clickable="false"
            android:src="@drawable/gathering_filter_fisher_off" />

        <ImageView
            android:id="@+id/imgFilterARR"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:src="@drawable/gathering_filter_arr_on" />

        <ImageView
            android:id="@+id/imgFilterHW"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:src="@drawable/gathering_filter_hw_on" />

        <ImageView
            android:id="@+id/imgFilterUnspoiled"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:src="@drawable/gathering_filter_unspoiled_on" />

        <ImageView
            android:id="@+id/imgFilterEphemeral"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:src="@drawable/gathering_filter_ephemeral_on" />

        <ImageView
            android:id="@+id/imgFilterFolklore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:src="@drawable/gathering_filter_folklore_on" />

        <ImageView
            android:id="@+id/imgFilterTime"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:clickable="false"
            android:src="@drawable/filter_time_off" />

        <TextView
            android:id="@+id/txtFiller"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10000"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txtEorzeaTime"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:text="00:00"
            android:textAlignment="gravity"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <ListView
        android:id="@+id/lstGatheringNodes"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/txtEorzeaTime"
        android:layout_alignRight="@+id/txtEorzeaTime"
        android:layout_below="@+id/section_label" />


</LinearLayout>
